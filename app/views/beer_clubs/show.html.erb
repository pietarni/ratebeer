<p style="color: green"><%= notice %></p>

<%= render @beer_club %>

<div>
  <% if current_user %>
    <% if @beer_club.users.include?(current_user) %>
      <p>You are already a member of this club.</p>
    <% else %>
      <%= button_to "Join Club", memberships_path(beer_club_id: @beer_club.id), method: :post %>
    <% end %>
  <% end %>
  <%= link_to "Edit this beer club", edit_beer_club_path(@beer_club) %> |
  <%= link_to "Back to beer clubs", beer_clubs_path %>

  <%= button_to "Destroy this beer club", @beer_club, method: :delete %>
</div>
