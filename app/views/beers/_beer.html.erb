<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= link_to beer.name, beer %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
      <%= link_to Brewery.find(beer.brewery_id).name, brewery_path(beer.brewery_id) %>
  </p>

</div>
