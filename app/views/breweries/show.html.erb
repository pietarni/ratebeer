<h2><%= @brewery.name%></h2>
<i>Established in:
    <%= @brewery.year %>
</i>

<p>
  Beers count: <%= @brewery.beers.count %>
</p>
<p>
 <% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %>
 <% end %>
</p>

<% if @brewery.average_rating != 0 %>
  <p>
    <strong><%= pluralize(@brewery.ratings.count, 'rating') %></strong>,
    average <%= @brewery.average_rating %>
  </p>
<% else %>
  <p>no ratings</p>
<% end %>

<div>
  <%= link_to "Edit this brewery", edit_brewery_path(@brewery) %> |
  <%= link_to "Back to breweries", breweries_path %>

  <%= button_to "Destroy this brewery", @brewery, method: :delete %>
</div>
